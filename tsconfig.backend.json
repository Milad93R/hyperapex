{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declaration": false,
    "removeComments": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend"
  },
  "include": [
    "src/backend/**/*",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}