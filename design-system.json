{
  "version": "1.0.0",
  "name": "Hyperapex Design System",
  "description": "Complete design system specification for Hyperapex project including colors, typography, spacing, components, and theme configuration",
  
  "designTokens": {
    "colors": {
      "light": {
        "primary": {
          "base": "#667eea",
          "dark": "#764ba2"
        },
        "secondary": {
          "base": "#B3BAFF",
          "dark": "#968CFF"
        },
        "accent": "#CECFD0",
        "text": {
          "primary": "#333",
          "secondary": "#4a5568",
          "silver": "#6b7280",
          "silverDark": "#4b5563",
          "silverDarker": "#374151",
          "darkest": "#0a0a0f",
          "dark": "#1a202c",
          "darkMedium": "#2d3748"
        },
        "background": {
          "lightStart": "#f5f7fa",
          "lightEnd": "#c3cfe2",
          "cardLightStart": "#e0e0e0",
          "cardLightEnd": "#f5f5f5",
          "darkStart": "#000000",
          "darkEnd": "#0a0a0f",
          "darkCard": "rgba(26, 26, 46, 0.98)"
        },
        "borders": {
          "light": "rgba(26, 26, 26, 0.2)",
          "primary": "rgba(102, 126, 234, 0.2)",
          "secondary": "rgba(179, 186, 255, 0.12)",
          "secondaryDark": "rgba(179, 186, 255, 0.3)"
        },
        "shadcn": {
          "background": "oklch(0.99 0.01 240)",
          "foreground": "oklch(0.15 0.05 240)",
          "card": "oklch(1 0 0)",
          "cardForeground": "oklch(0.15 0.05 240)",
          "popover": "oklch(1 0 0)",
          "popoverForeground": "oklch(0.15 0.05 240)",
          "primary": "oklch(0.6 0.2 240)",
          "primaryForeground": "oklch(1 0 0)",
          "secondary": "oklch(0.96 0.02 240)",
          "secondaryForeground": "oklch(0.15 0.05 240)",
          "muted": "oklch(0.96 0.02 240)",
          "mutedForeground": "oklch(0.45 0.05 240)",
          "accent": "oklch(0.94 0.03 240)",
          "accentForeground": "oklch(0.15 0.05 240)",
          "destructive": "oklch(0.62 0.25 29)",
          "border": "oklch(0.92 0.02 240)",
          "input": "oklch(0.94 0.02 240)",
          "ring": "oklch(0.6 0.2 240)"
        }
      },
      "dark": {
        "primary": {
          "base": "#B3BAFF",
          "dark": "#968CFF"
        },
        "text": {
          "silver": "#9ca3af",
          "silverDark": "#6b7280",
          "silverDarker": "#d1d5db"
        },
        "background": {
          "cardLightStart": "#000000",
          "cardLightEnd": "#0a0a0f"
        },
        "borders": {
          "secondary": "rgba(179, 186, 255, 0.3)"
        },
        "shadcn": {
          "background": "oklch(0.12 0.02 240)",
          "foreground": "oklch(0.9 0.05 240)",
          "card": "oklch(0.15 0.02 240)",
          "cardForeground": "oklch(0.9 0.05 240)",
          "popover": "oklch(0.15 0.02 240)",
          "popoverForeground": "oklch(0.9 0.05 240)",
          "primary": "oklch(0.7 0.25 240)",
          "primaryForeground": "oklch(0.1 0.02 240)",
          "secondary": "oklch(0.2 0.02 240)",
          "secondaryForeground": "oklch(0.9 0.05 240)",
          "muted": "oklch(0.2 0.02 240)",
          "mutedForeground": "oklch(0.65 0.05 240)",
          "accent": "oklch(0.25 0.03 240)",
          "accentForeground": "oklch(0.9 0.05 240)",
          "destructive": "oklch(0.7 0.25 29)",
          "destructiveForeground": "oklch(0.1 0.02 240)",
          "border": "oklch(0.25 0.02 240)",
          "input": "oklch(0.2 0.02 240)",
          "ring": "oklch(0.7 0.25 240)"
        }
      }
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "2.5rem",
      "3xl": "3rem",
      "tailwindBase": "0.25rem"
    },
    "typography": {
      "fontFamily": {
        "sans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif",
        "mono": "monospace",
        "geistSans": "var(--font-geist-sans)",
        "geistMono": "var(--font-geist-mono)"
      },
      "fontSizes": {
        "xs": "0.6875rem",
        "sm": "0.75rem",
        "md": "0.8125rem",
        "base": "1rem",
        "lg": "1.1rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.75rem",
        "tailwindSm": "0.875rem"
      },
      "lineHeight": {
        "body": "1.6",
        "heading": "1.3",
        "paragraph": "1.7",
        "tailwindSm": "1.25rem"
      },
      "fontWeights": {
        "light": 100,
        "normal": 400,
        "medium": 500,
        "bold": 700
      },
      "letterSpacing": {
        "tight": "-0.025em",
        "normal": "-0.02em",
        "wide": "0.05em"
      }
    },
    "borderRadius": {
      "sm": "12px",
      "md": "16px",
      "lg": "20px",
      "full": "9999px",
      "base": "0.75rem",
      "tailwind": {
        "sm": "calc(var(--radius) - 4px)",
        "md": "calc(var(--radius) - 2px)",
        "lg": "var(--radius)",
        "xl": "calc(var(--radius) + 4px)"
      }
    },
    "shadows": {
      "light": {
        "sm": "0 8px 32px rgba(0, 0, 0, 0.1)",
        "md": "0 20px 60px rgba(0, 0, 0, 0.1)",
        "lg": "0 8px 32px rgba(0, 0, 0, 0.05)"
      },
      "dark": {
        "sm": "0 8px 32px rgba(0, 0, 0, 0.7)",
        "md": "0 20px 60px rgba(0, 0, 0, 0.3)",
        "lg": "0 8px 32px rgba(0, 0, 0, 0.2)",
        "card": "0 20px 60px rgba(0, 0, 0, 0.3)"
      },
      "xs": "0 1px 2px 0 var(--tw-shadow-color, rgb(0 0 0 / 0.05))"
    },
    "opacity": {
      "disabled": 0.5,
      "muted": 0.6,
      "subtle": 0.8,
      "normal": 0.9,
      "hover": 0.3,
      "focus": 0.4
    },
    "zIndex": {
      "base": 0,
      "content": 2,
      "overlay": 999,
      "header": 1000,
      "headerMenu": 1001
    },
    "transitions": {
      "fast": "0.2s ease",
      "normal": "0.3s ease",
      "slow": "0.5s ease",
      "defaultTiming": "cubic-bezier(0.4, 0, 0.2, 1)",
      "defaultDuration": "150ms"
    }
  },
  
  "theme": {
    "mode": "data-theme",
    "lightSelector": ":root",
    "darkSelector": "[data-theme=\"dark\"]",
    "tailwindDarkVariant": "&:is([data-theme=\"dark\"] *)"
  },
  
  "components": {
    "button": {
      "modernButton": {
        "styles": {
          "container": {
            "boxShadow": "inset 0 0 0 1px rgba(179, 186, 255, 0.12)",
            "background": "linear-gradient(0deg, #CECFD0, #968CFF)",
            "backdropFilter": "blur(4px)",
            "borderRadius": "9999px",
            "padding": "14px",
            "fontFamily": "monospace",
            "fontWeight": 100,
            "textTransform": "uppercase",
            "height": "42px",
            "fontSize": "0.875rem"
          },
          "light": {
            "boxShadow": "inset 0 0 0 1px rgba(26, 26, 26, 0.2)",
            "background": "linear-gradient(0deg, #e0e0e0, #f5f5f5)",
            "textColor": "#1a1a1a",
            "textGradient": "linear-gradient(0deg, #333333, #1a1a1a)"
          }
        },
        "responsive": {
          "tablet": {
            "height": "36px",
            "fontSize": "0.75rem",
            "padding": "12px"
          },
          "mobile": {
            "height": "32px",
            "fontSize": "0.6875rem",
            "padding": "10px"
          }
        }
      },
      "primary": {
        "styles": {
          "boxShadow": "inset 0 0 0 1px var(--border-color-primary)",
          "background": "linear-gradient(0deg, var(--color-primary), var(--color-primary-dark))",
          "backdropFilter": "blur(4px)",
          "color": "#ffffff",
          "padding": "0.875rem var(--spacing-xl)",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "fontFamily": "monospace",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "borderRadius": "var(--radius-full)",
          "height": "42px"
        }
      },
      "secondary": {
        "styles": {
          "boxShadow": "inset 0 0 0 1px var(--border-color-secondary)",
          "background": "linear-gradient(0deg, var(--color-accent), var(--color-secondary-dark))",
          "backdropFilter": "blur(4px)",
          "color": "var(--color-secondary)",
          "padding": "0.875rem var(--spacing-xl)",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "fontFamily": "monospace",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "borderRadius": "var(--radius-full)",
          "height": "42px"
        },
        "light": {
          "background": "linear-gradient(0deg, var(--bg-card-light-start), var(--bg-card-light-end))",
          "boxShadow": "inset 0 0 0 1px var(--border-color-light)",
          "color": "var(--color-primary)"
        }
      }
    },
    "header": {
      "styles": {
        "background": "linear-gradient(0deg, var(--color-accent), var(--color-secondary-dark))",
        "backdropFilter": "blur(20px)",
        "padding": "var(--spacing-sm) 0",
        "position": "absolute",
        "top": 0,
        "left": 0,
        "right": 0,
        "zIndex": "var(--z-header)",
        "boxShadow": "inset 0 0 0 1px var(--border-color-secondary), var(--shadow-md), var(--shadow-lg)",
        "borderRadius": "var(--radius-lg)",
        "maxWidth": "1200px",
        "margin": "var(--spacing-sm) auto"
      },
      "responsive": {
        "desktop": {
          "minWidth": "1024px",
          "padding": "var(--spacing-sm) var(--spacing-lg)",
          "left": "50%",
          "transform": "translateX(-50%)"
        }
      },
      "logo": {
        "fontSize": "var(--font-xl)",
        "fontWeight": 700,
        "background": "linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%)",
        "webkitBackgroundClip": "text",
        "backgroundClip": "text",
        "webkitTextFillColor": "transparent",
        "letterSpacing": "-0.02em"
      },
      "navigation": {
        "linkStyles": {
          "light": {
            "background": "linear-gradient(135deg, var(--color-text-dark) 0%, var(--color-text-dark-medium) 100%)",
            "webkitBackgroundClip": "text",
            "backgroundClip": "text",
            "webkitTextFillColor": "transparent"
          }
        }
      }
    },
    "hero": {
      "styles": {
        "minHeight": "100vh",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "padding": "4rem var(--spacing-lg) 2rem",
        "background": "transparent",
        "position": "relative",
        "overflow": "hidden"
      },
      "heading": {
        "fontSize": "clamp(1.5rem, 4vw + 0.5rem, 3rem)",
        "fontWeight": 700,
        "fontFamily": "monospace",
        "textTransform": "uppercase",
        "letterSpacing": "0.05em",
        "lineHeight": 1.2,
        "gradient": {
          "light": "linear-gradient(135deg, #2d3748 0%, #4a5568 50%, #1a202c 100%)",
          "dark": "linear-gradient(135deg, #B3BAFF 0%, #968CFF 50%, #CECFD0 100%)"
        }
      },
      "subheading": {
        "fontSize": "var(--font-base)",
        "fontFamily": "monospace",
        "fontWeight": 500,
        "textTransform": "uppercase",
        "letterSpacing": "0.05em",
        "color": "var(--color-text-secondary)",
        "lineHeight": 1.5,
        "maxWidth": "600px",
        "opacity": "var(--opacity-normal)"
      },
      "animations": {
        "heroGlow": {
          "duration": "15s",
          "timing": "ease-in-out",
          "iteration": "infinite"
        },
        "bubbleFloat": {
          "duration1": "20s",
          "duration2": "25s",
          "duration3": "30s",
          "timing": "ease-in-out",
          "iteration": "infinite"
        }
      }
    },
    "animations": {
      "heroFadeIn": {
        "duration": "0.45s",
        "timing": "ease-out",
        "fillMode": "forwards"
      },
      "buttonRotate": {
        "duration": "4s",
        "timing": "linear",
        "iteration": "infinite"
      },
      "blink": {
        "duration": "1s",
        "iteration": "infinite"
      }
    }
  },
  
  "gradients": {
    "primary": "linear-gradient(0deg, var(--color-primary), var(--color-primary-dark))",
    "secondary": "linear-gradient(0deg, var(--color-accent), var(--color-secondary-dark))",
    "backgroundLight": "linear-gradient(135deg, var(--bg-light-start) 0%, var(--bg-light-end) 100%)",
    "backgroundDark": "linear-gradient(135deg, var(--bg-dark-start) 0%, var(--bg-dark-end) 100%)",
    "borderConic": "conic-gradient(from 5deg at 50% 50%, transparent 280deg, #98c0ef 1turn, transparent 361deg)",
    "textGradient": {
      "primary": "linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%)",
      "headingLight": "linear-gradient(135deg, #2d3748 0%, #4a5568 50%, #1a202c 100%)",
      "headingDark": "linear-gradient(135deg, #B3BAFF 0%, #968CFF 50%, #CECFD0 100%)"
    }
  },
  
  "breakpoints": {
    "mobile": "480px",
    "tablet": "768px",
    "desktop": "1024px"
  },
  
  "config": {
    "tailwind": {
      "version": "4",
      "postcssPlugin": "@tailwindcss/postcss",
      "themeInline": true,
      "customVariant": "dark"
    },
    "shadcn": {
      "style": "new-york",
      "baseColor": "neutral",
      "cssVariables": true,
      "iconLibrary": "lucide"
    },
    "fonts": {
      "geistSans": "Geist Sans",
      "geistMono": "Geist Mono"
    }
  },
  
  "usage": {
    "instructions": "This JSON file describes the complete design system for the Hyperapex project. To use in another project:",
    "steps": [
      "1. Extract all CSS variables from the 'designTokens' section",
      "2. Add them to your globals.css file in :root and [data-theme=\"dark\"] selectors",
      "3. Configure Tailwind CSS v4 with @theme inline block using the theme tokens",
      "4. Implement components using the styles specified in the 'components' section",
      "5. Use the breakpoints, spacing, and typography scales as defined",
      "6. Apply gradients and animations as specified",
      "7. Set up the theme system using [data-theme=\"dark\"] attribute on html/body"
    ],
    "cssVariables": {
      "note": "All design tokens should be defined as CSS custom properties with -- prefix",
      "example": "--color-primary: #667eea; --spacing-md: 1rem; etc."
    }
  }
}

